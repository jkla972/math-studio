{
  "manifest_version": 2,
  "version": "0.1.0",
  "name":"Math Studio",
  "description": "Evaluate complex mathematical formula and plot them in a workspace like Matematica",

  "permissions": [
    "storage",
    "contextMenus"
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "sandbox": {
     "pages": [ "data/studio/sandbox.html"]
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  }
}
